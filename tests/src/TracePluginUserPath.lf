/**
 * This test shows the best approach for the user who
 * prefers a clean installation that can be easily removed later.
 * To run this test successfully,
 * build and install lf-trace-xronos to ./install/.
 */
target C {
    tracing: true,
    trace-plugin: {
        package: "lf-trace-xronos",
        library: "lf::trace-impl",
        path: "../../install/",
    },
    timeout: 5s,
}

import Sensor, Processing, Actuator from "lib/Components.lf"

main reactor {
    s = new Sensor()
    p = new Processing()
    a = new Actuator()
    s.out -> p.in
    p.out -> a.in
}