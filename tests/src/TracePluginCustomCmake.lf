/**
 * This test shows the most developer-friendly approach
 * to get the trace plugin working using cmake-include
 * with the provided plugin.cmake.
 * To run this test successfully,
 * build and install lf-trace-xronos to ./install/.
 */
target C {
    tracing: true,
    cmake-include: ["../../plugin.cmake"],
    timeout: 5s,
}

import Sensor, Processing, Actuator from "lib/Components.lf"

main reactor {
    s = new Sensor()
    p = new Processing()
    a = new Actuator()
    s.out -> p.in
    p.out -> a.in
}