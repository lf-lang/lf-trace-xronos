/**
 * This test shows the cleanest approach:
 * enabled when the plugin installed to system path.
 * To run this test successfully,
 * install lf-trace-xronos to the system path.
 */
target C {
    tracing: true,
    trace-plugin: {
        package: "lf-trace-xronos",
        library: "lf::trace-impl",
    },
    timeout: 5s,
}

import Sensor, Processing, Actuator from "lib/Components.lf"

main reactor {
    s = new Sensor()
    p = new Processing()
    a = new Actuator()
    s.out -> p.in
    p.out -> a.in
}